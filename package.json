{
  "name": "hypertrons",
  "version": "1.0.0",
  "description": "Open source robot platform",
  "private": true,
  "egg": {
    "typescript": true,
    "declarations": true
  },
  "scripts": {
    "start": "tsc && egg-scripts start --daemon --title=egg-server-hypertrons",
    "stop": "egg-scripts stop --title=egg-server-hypertrons",
    "dev": "egg-bin dev",
    "debug": "egg-bin debug",
    "test-local": "egg-bin test",
    "test": "npm run lint -- --fix && npm run cov && npm run tsc && npm run md-lint && npm run license-check",
    "cov": "egg-bin cov",
    "tsc": "ets && tsc -p .",
    "autod": "autod",
    "lint": "eslint . --ext .ts",
    "clean": "ets clean",
    "md-lint": "open-md-checker",
    "filename-check": "node app/utils/filename-check/index.js",
    "license-check": "node app/utils/license-check/index.js --logInfo=false"
  },
  "dependencies": {
    "@octokit/app": "^4.1.0",
    "@octokit/plugin-retry": "^2.2.0",
    "@octokit/rest": "^16.43.2",
    "@octokit/webhooks": "^6.3.2",
    "@slack/web-api": "^5.6.0",
    "@slack/webhook": "^5.0.2",
    "@svgdotjs/svg.js": "^3.0.16",
    "@types/deep-diff": "^1.0.0",
    "@types/dingtalk-robot-sender": "^1.1.0",
    "@types/nodemailer": "^6.2.2",
    "deep-diff": "^1.0.2",
    "deglob": "^4.0.1",
    "delay": "^4.3.0",
    "dingtalk-robot-sender": "^1.2.0",
    "egg": "^2.33.0",
    "egg-scripts": "^2.16.0",
    "eventsource": "^1.0.7",
    "execa": "^1.0.0",
    "extend2": "^1.0.1",
    "fengari": "^0.1.4",
    "github-data-cat": "1.0.2",
    "gitlab": "^12.0.0",
    "google-translate": "^3.0.0",
    "http2": "^3.3.7",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.6",
    "node-schedule": "^1.3.2",
    "node-watch": "^0.6.3",
    "nodemailer": "^6.7.2",
    "p-queue": "^6.3.0",
    "p-retry": "^4.2.0",
    "p-wait-for": "^3.1.0",
    "pope": "^2.0.2",
    "reflect-metadata": "^0.1.13",
    "smee-client": "^1.1.0",
    "svgdom": "0.1.10",
    "vfile-reporter": "^6.0.0",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^2.2.40",
    "@types/node": "^12.12.14",
    "@types/node-fetch": "^2.5.4",
    "@types/node-schedule": "^1.2.4",
    "@types/supertest": "^2.0.0",
    "autod": "^3.0.1",
    "autod-egg": "^1.1.0",
    "egg-bin": "^4.19.0",
    "egg-ci": "^1.8.0",
    "egg-mock": "^3.16.0",
    "egg-onerror": "^2.1.0",
    "eslint": "^8.13.0",
    "eslint-config-egg": "^11.0.1",
    "gulp": "^4.0.2",
    "gulp-license-check": "^1.2.1",
    "gulp-util": "^3.0.8",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "moment": "^2.29.2",
    "nock": "^11.7.0",
    "open-md-checker": "^1.2.3",
    "remark": "^11.0.2",
    "remark-lint-no-dead-urls": "^1.0.1",
    "remark-preset-lint-markdown-style-guide": "^2.1.3",
    "remark-preset-lint-recommended": "^3.0.3",
    "text-encoding": "^0.7.0",
    "tslib": "^1.13.0",
    "typescript": "^3.8.3",
    "yargs": "^15.1.0"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "ci": {
    "version": "8"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "eslintIgnore": [
    "coverage",
    "**/*.d.ts",
    "node_modules/"
  ],
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/no-empty-function": "off",
      "no-case-declarations": "off"
    },
    "extends": "eslint-config-egg/typescript"
  },
  "author": "frank-zsy",
  "license": "Apache 2.0",
  "md-lint": {
    "patterns": [
      "**/*.md"
    ],
    "options": {
      "useGitIgnore": true,
      "ignore": [
        "node_modules/**/*"
      ]
    }
  },
  "filename-check": {
    "patterns": [
      "app/**/*",
      "test/**/*",
      "config/**/*",
      "scripts/**/*"
    ],
    "options": {
      "useGitIgnore": true,
      "ignore": []
    }
  }
}
