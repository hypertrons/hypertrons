{
  "name": "oss-mentor-bot",
  "version": "1.0.0",
  "description": "Mentor robot for open source project",
  "private": true,
  "egg": {
    "typescript": true,
    "declarations": true
  },
  "scripts": {
    "start": "tsc && egg-scripts start --daemon --title=egg-server-oss-mentor-bot",
    "stop": "egg-scripts stop --title=egg-server-oss-mentor-bot",
    "dev": "egg-bin dev",
    "debug": "egg-bin debug",
    "test-local": "egg-bin test",
    "test": "npm run lint -- --fix && npm run test-local",
    "cov": "egg-bin cov",
    "tsc": "ets && tsc -p .",
    "ci": "npm run lint && npm run cov && npm run tsc",
    "autod": "autod",
    "lint": "tslint --project . -c tslint.json",
    "clean": "ets clean",
    "licensecheck": "license-check"
  },
  "dependencies": {
    "@octokit/app": "^4.1.0",
    "@octokit/rest": "^16.35.0",
    "@octokit/webhooks": "^6.3.2",
    "@slack/web-api": "^5.6.0",
    "@slack/webhook": "^5.0.2",
    "@types/dingtalk-robot-sender": "^1.1.0",
    "@types/nodemailer": "^6.2.2",
    "dingtalk-robot-sender": "^1.2.0",
    "egg": "^2.6.1",
    "egg-scripts": "^2.6.0",
    "eventsource": "^1.0.7",
    "extend2": "^1.0.0",
    "fengari": "^0.1.4",
    "github-data-cat": "^1.0.1",
    "gitlab": "^12.0.0",
    "license-check": "^1.1.5",
    "lodash": "^4.17.15",
    "node-fetch": "^2.6.0",
    "node-schedule": "^1.3.2",
    "nodemailer": "^6.3.1",
    "p-wait-for": "^3.1.0",
    "pope": "^2.0.2",
    "reflect-metadata": "^0.1.13",
    "smee-client": "^1.1.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.12",
    "@types/node-schedule": "^1.2.4",
    "@types/supertest": "^2.0.0",
    "autod": "^3.0.1",
    "autod-egg": "^1.1.0",
    "egg-bin": "^4.11.0",
    "egg-ci": "^1.8.0",
    "egg-mock": "^3.16.0",
    "text-encoding": "^0.7.0",
    "tslib": "^1.9.0",
    "tslint": "^5.0.0",
    "tslint-config-egg": "^1.0.0",
    "typescript": "^3.0.0"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "ci": {
    "version": "8"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "eslintIgnore": [
    "coverage"
  ],
  "author": "Xlab",
  "license": "MIT",
  "license-check-config": {
    "src": [
      "app.ts",
      "app/**/*.ts",
      "config/**/*.ts",
      "test/**/*.ts"
    ],
    "path": "/data/license.header",
    "blocking": true,
    "logInfo": false,
    "logError": true
  }
}
